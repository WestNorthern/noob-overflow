<div class="container">
  <div class="row">
    <div class="account col s9 offset-s2">
      <h3>Edit Your Account</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
        <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, autofocus: true, :class => 'validate' %>
          </div>

          <div class="field">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, :class => 'validate' %>
          </div>

          <div class="field">
            <%= f.label :username %><br />
            <i class="tiny material-icons red-text" id="username_fail">sentiment_very_dissatisfied</i>
            <i class="tiny material-icons green-text" id="username_win">sentiment_very_satisfied</i>
            <%= f.text_field :username, :class => 'validate', id: 'new_username' %>
          </div>

          <div class="field">
            <%= f.label :about %><br />
          
            <%= f.text_area :about, :class => 'validate' %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <i class="tiny material-icons red-text" id="email_fail">sentiment_very_dissatisfied</i>
            <i class="tiny material-icons green-text" id="email_win">sentiment_very_satisfied</i>
            <%= f.email_field :email, :class => 'validate', id: 'new_email' %>
          </div>

          <div class="field">
            <% if resource.avatar? %>
              <%= image_tag resource.avatar.url(:small) %>
            <% end %>
            <br />
            <%= f.label :avatar, "Pix0rz" %> <br />
            <%= f.file_field :avatar %> 
          </div>
          <br>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", :class => 'waves-effect waves-light btn' %>
        </div>
      <% end %>

      <h3>Delete my account</h3>

      <%= link_to 'Delete Account <i class="tiny material-icons left">delete</i>'.html_safe, registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'waves-effect waves-light btn red accent-4' %>
        <br>
        <br>
        <hr>
        <br>
      <%= link_to "Back", :back, class: "waves-effect waves-light btn" %>
    </div>
  </div>
</div>